{
  "name": "solanaid",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "app",
    "sdk",
    "tlsnotary/prover-client",
    "tlsnotary/browser-extension"
  ],
  "scripts": {
    "install": "npm install --prefix app && npm install --prefix sdk",
    "build": "anchor build",
    "deploy": "anchor deploy",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "test": "anchor test --skip-local-validator",
    "notary:setup": "chmod +x scripts/setup-notary-nodes.sh && ./scripts/setup-notary-nodes.sh",
    "notary:start": "docker-compose -f docker/docker-compose.yml up -d",
    "notary:stop": "docker-compose -f docker/docker-compose.yml down",
    "initialize": "ts-node scripts/initialize-protocol.ts",
    "dev:frontend": "cd app && npm run dev",
    "dev:extension": "cd tlsnotary/browser-extension && npm run dev",
    "build:sdk": "cd sdk && npm run build"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/web3.js": "^1.95.8",
    "@types/node": "^22.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
